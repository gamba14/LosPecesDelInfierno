<header>
		<h1><%= @project.name %></h1>
		<% title(@project.name, "Projects") %>
		<ul class="actions">
		<li><%= link_to "Edit Project", edit_project_path(@project), class: "edit" %></li>
		<li><%= link_to "Delete Project", 
				project_path(@project), 
				method: :delete,
				data: { confirm: "Seguro que desea eleminar proyecto?" },
				class: "delete"	%>

		<li><%= link_to "Home", projects_path(@project), class: "home" %></li>
</header>


<p><%= @project.description %></p>